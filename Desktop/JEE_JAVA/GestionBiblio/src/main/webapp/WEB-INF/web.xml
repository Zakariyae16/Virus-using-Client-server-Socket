<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
  <servlet>
    <servlet-name>user</servlet-name>
    <servlet-class>Controllers.UsersController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>admin</servlet-name>
    <servlet-class>Controllers.LibrarianController</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>user</servlet-name>
    <url-pattern>/user</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>admin</servlet-name>
    <url-pattern>/admin</url-pattern>
    <url-pattern>/admin/livre</url-pattern>
    <url-pattern>/admin/livre/add</url-pattern>
    <url-pattern>/admin/livre/edit</url-pattern>
    <url-pattern>/admin/livre/delete</url-pattern>
    <url-pattern>/admin/reservation</url-pattern>
    <url-pattern>/admin/reservation/delete</url-pattern>
  </servlet-mapping>
</web-app>
